  
@{
    var httpContextAccessor = new HttpContextAccessor();
    var helper = new HelpDesk.Helper.Session(httpContextAccessor);
    var usuario = helper.BuscarSessao();
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HelpDesk.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">



</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom">
            <div class="container-fluid justify-content-end">

                <div class="dropdown">
                    <a href="#"
                       class="d-flex align-items-center gap-2 text-decoration-none dropdown-toggle px-2 py-1
          rounded hover-shadow"
                       data-bs-toggle="dropdown"
                       aria-expanded="false">

                        <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center fw-semibold"
                             style="width:36px; height:36px;">
                            @{
                                string iniciais = "";

                                if (usuario != null && !string.IsNullOrWhiteSpace(usuario.Nome))
                                {
                                    var partes = usuario.Nome
                                    .Trim()
                                    .Split(' ', StringSplitOptions.RemoveEmptyEntries);

                                    if (partes.Length >= 1)
                                        iniciais += partes[0][0];

                                    if (partes.Length >= 2)
                                        iniciais += partes[1][0];
                                }
                            }
                            @iniciais.ToUpper()
                        </div>


                        <span class="fw-semibold text-dark">@usuario.Login</span>
                    </a>


                    <ul class="dropdown-menu dropdown-menu-end shadow">
                        <li><a class="dropdown-item text-danger" asp-action="remover" asp-controller="Login">Sair</a></li>
                    </ul>
                </div>

            </div>
        </nav>
    </header>


    <div class="container-flex">



        <aside class="sidebar bg-light border-end vh-100 p-3" style="position: relative;
    top: -60px;">

            <h5 class="fw-bold mb-4">GLPI 2.0</h5>

            <a href="/"
               class="d-flex align-items-center fw-semibold text-muted mb-3 text-decoration-none">
                <i class="bi bi-arrow-left me-2"></i>
                Voltar para Menu
            </a>



            <ul class="nav nav-pills flex-column">

                <li class="nav-item">

                    <a class="nav-link d-flex align-items-center justify-content-between text-dark fw-semibold menu-toggle mb-1"
                       data-bs-toggle="collapse"
                       href="#menuAssistencia"
                       role="button"
                       aria-expanded="false" style="padding: 0px 16px 8px 0;">

                        <div class="d-flex align-items-center">
                            <i class="bi bi-headset me-2 fs-5"></i>
                            Assistência
                        </div>

                        <i class="bi bi-chevron-down transition"></i>
                    </a>

                    <div class="collapse ps-4" id="menuAssistencia">
                        <ul class="nav flex-column mt-2 submenu">

                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center fw-semibold text-dark submenu-link" href="#">
                                    <i class="bi bi-exclamation-circle fs-5 me-3"></i>
                                    Chamados
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center fw-semibold text-dark submenu-link" asp-action="Index" asp-controller="CriarChamado">
                                    <i class="bi bi-plus fs-5 me-3"></i>
                                    Criar chamado
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center fw-semibold text-dark submenu-link" asp-action="Index" asp-controller="Usuario">
                                    <i class="bi bi-person fs-5 me-3"></i>
                                     Usuarios
                                </a>
                            </li>

                        </ul>
                    </div>

                </li>


            </ul>
        </aside>

       



        <div class="content-wrapper">
            <main class="content">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
