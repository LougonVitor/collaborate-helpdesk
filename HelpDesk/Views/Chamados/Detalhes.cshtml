                        </textarea>
                    </div>

                </div>
            </div>

            <!-- COLUNA DIREITA -->
            <div class="col-lg-4">

                <div class="border rounded bg-white p-3">

                    <!-- TÍTULO -->
                    <div class="d-flex align-items-center mb-3 border-bottom pb-2">
                        <i class="bi bi-info-circle me-2 text-muted"></i>
                        <span class="fw-semibold text-muted">Chamado</span>
                    </div>

                    <!-- CAMPOS -->
                    <div class="mb-2">
                        <label class="form-label small text-muted">Data de abertura</label>
                        <input class="form-control" value="06-05-2025 09:21:01" readonly />
                    </div>

                    <div class="mb-2">
                        <label class="form-label small text-muted">Tipo</label>
                        <select class="form-select">
                            <option selected>Requisição</option>
                        </select>
                    </div>

                    <div class="mb-2">
                        <label class="form-label small text-muted">Categoria *</label>
                        <select class="form-select">
                            <option selected>EQUIPAMENTOS &gt; COMPUTADOR</option>
                        </select>
                    </div>

                    <div class="mb-2">
                        <label class="form-label small text-muted">Status</label>
                        <select class="form-select text-success fw-semibold">
                            <option selected>● Novo</option>
                        </select>
                    </div>

                    <div class="mb-2">
                        <label class="form-label small text-muted">Urgência</label>
                        <select class="form-select">
                            <option selected>Alta</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label small text-muted">Localização *</label>
                        <input class="form-control"
                               value="HIFA SUMARÉ > 2º ANDAR > PRESCRIÇÃO"
                               readonly />
                    </div>

                    <!-- ATRIBUIÇÃO -->
                    <div class="border-top pt-3 mt-3">
                        <label class="form-label small text-muted">
                            Técnico atribuído
                        </label>

                        <div class="input-group mb-2">
                            <span class="input-group-text bg-light">
                                <i class="bi bi-person"></i>
                            </span>
                            <input type="text"
                                   class="form-control"
                                   value="Gabriel Campos" />
                        </div>

                        <div class="d-flex justify-content-end">
                            <button class="btn btn-success fw-semibold px-4 d-flex align-items-center gap-2">
                                <i class="bi bi-save"></i>
                                Salvar
                            </button>
                        </div>
                    </div>

                </div>
            </div>

        </div>

    </div>
</div>

<footer class="bg-white border-top">
    <div class="container-fluid px-3 py-2 d-flex justify-content-end">
        <button class="btn btn-success fw-semibold px-4">
            <i class="bi bi-reply-fill me-1"></i>
            Responder
        </button>
    </div>
</footer>

