            <div class="col-lg-8">

                <div class="border rounded bg-white">

                    <!-- HEADER INTERNO -->
                    <div class="d-flex align-items-center px-3 py-2 border-bottom">
                        <div class="rounded bg-success text-white fw-semibold
                                    d-flex align-items-center justify-content-center me-2"
                             style="width:36px;height:36px;">
                            AD
                        </div>

                        <small class="text-muted">
                            Criado em:
                            <i class="bi bi-clock ms-1"></i>
                            06/05/2025 09:21
                            por
                            <span class="fw-semibold">Amabile de S. V. Nunes</span>
                        </small>
                    </div>

                    <!-- TEXTO -->
                    <div class="px-3 py-3">
                        <textarea class="form-control text-success"
                                  rows="16"
                                  readonly
                                  style="resize:none;">
