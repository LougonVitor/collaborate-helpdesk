@{
    ViewData["title"] = "Pagina de login";
    Layout = "_LayoutLogin";
}

<div class="card shadow-sm p-4" style="max-width: 380px; width: 100%;">

    <div class="text-center mb-4">
        <h1 class="h4 fw-bold">Login</h1>
        <p class="text-muted mb-0">Acesse sua conta</p>
    </div>

    <form>
        <div class="form-floating mb-3">
            <input type="email"
                   class="form-control"
                   id="email"
                   placeholder="name@example.com" />
            <label for="email">Email</label>
        </div>

        <div class="form-floating mb-3">
            <input type="password"
                   class="form-control"
                   id="password"
                   placeholder="Senha" />
            <label for="password">Senha</label>
        </div>

        <button type="submit" class="btn btn-primary w-100">
            Entrar
        </button>
    </form>


</div>
